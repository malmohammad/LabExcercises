
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@model Movie
<hr />
<h4>Search By Title</h4>
<div class=“row”>
    <div class=“col-md-4”>
        <form asp-controller=“Movies” asp-action=“ResultByTitle” method=“post”>
            <div class=“form-group”>
                <label asp-for=“Title” class=“control-label”>Title:</label>
                <input asp-for=“Title” class=“form-control” />
                <span asp-validation-for=“Title” class=“text-danger”></span>
            </div>
            <div class=“form-group”>
                <button type=“submit” value=“Movies” class=“btn btn-primary”>Submit</button>
            </div>
        </form>
    </div>
</div>
<h4>Search By Genre</h4>
<div class=“row”>
    <div class=“col-md-4”>
        <form asp-controller=“Movies” asp-action=“ResultByGenre” method=“post”>
            <div class=“form-group”>
                <label asp-for=“Genre” class=“control-label”>Genre:</label>
                <select asp-for=“Genre” asp-items=“Html.GetEnumSelectList<TypeGenre>()” class=“form-control”></select>
            </div>
            <div class=“form-group”>
                <button type=“submit” value=“Registration” class=“btn btn-primary”>Submit</button>
            </div>
        </form>
    </div>
</div>



